@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}


<link rel="stylesheet" href="~/css/login.css" />

<div class="container mt-5" id="container">

    <div class="form-container sign-in-container">

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">

            <h1>Sign in</h1>
            <h4>With Recovery Code</h4>

            <br />

            <input asp-for="Input.RecoveryCode" autocomplete="off" placeholder="RecoveryCode" aria-required="true" />
            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>

            <button id="login-submit" type="submit">Sign In</button>

            <a class="nav-link text-dark" asp-area="Identity" asp-page="./LoginWith2fa">Sign in with authenticator app</a>

        </form>

    </div>

    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <div class="d-flex">
                    <img class="brand-logo" src="~/logo.svg" alt="brand-logo" />
                    <h1 class="d-flex justify-content-center align-items-center">LOOPIN</h1>
                </div>
                <br />

                <h5>@ViewData["Title"]</h5>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}