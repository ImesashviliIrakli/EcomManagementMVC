@model List<Supplier>

@{
    ViewData["Title"] = "Supplier Page";
}

<div class="content">

    <h1>Suppliers</h1>

    @*<a class="btn btn-lg btn-success" asp-area="" asp-controller="Supplier" asp-action="Add"><i class="bi bi-plus-square"></i></a>*@

    @{
        Html.RenderPartial("_AddSupplierModal", new SupplierDto());
    }

    <div class="table-responsive">

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.SupplierID</th>
                        <td>@item.SupplierName</td>
                        <td>@item.Description</td>
                        <td><img src="@item.Image" style="width:50px;" /></td>
                        <td>
                            @* <a class="btn btn-lg btn-primary" asp-controller="Supplier" asp-action="Edit" asp-route-id="@item.SupplierID">
                        <i class="bi bi-pencil-square"></i>
                        </a> *@

                            @{
                                Html.RenderPartial("_EditSupplierModal", item);
                            }

                        </td>
                        <td>
                            <form method="post" asp-controller="Supplier" asp-action="DeleteSupplier" asp-route-id="@item.SupplierID">
                                <button type="submit" class="btn btn-lg btn-danger" onclick="return confirm('Are you sure you want to delete this item?')"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

</div>