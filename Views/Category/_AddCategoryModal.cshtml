@model Category

<button type="button" class="btn btn-lg btn-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
    New <i class="bi bi-plus-square"></i>
</button>

<!-- Modal -->
<div class="modal modal-lg fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">


            <div class="modal-header">
                <h1 class="modal-title fs-5" id="addCategoryModalLabel">Create Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-controller="Category" asp-action="AddCategory" method="post">

                <div class="modal-body">


                    <div class="row">
                        <Label class="col-2" asp-for="CategoryName">Category Name</Label>
                        <div class="col">
                            <input class="form-control" asp-for="CategoryName" type="text" name="CategoryName" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row">
                        <Label class="col-2" asp-for="Description">Description</Label>
                        <div class="col">
                            <textarea class="form-control" asp-for="Description" name="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>

            </form>

        </div>
    </div>
</div>