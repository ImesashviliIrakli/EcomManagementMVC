@model List<Category>

@{
    ViewData["Title"] = "Category Page";
}

<div class="container">

    <a class="btn btn-success" asp-area="" asp-controller="Category" asp-action="Add">+</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.CategoryID</th>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td><a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a></td>
                    <td>
                        <form method="post" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryID">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>